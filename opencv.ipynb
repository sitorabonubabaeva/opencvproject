   "source": [
    "import cv2\n",
    "\n",
    "cap = cv2.VideoCapture(0)\n",
    "cv2.namedWindow(\"camera\")\n",
    "\n",
    "while True:\n",
    "    \n",
    "    succes, frame = cap.read()\n",
    "    cv2.imshow(\"camera\", frame)\n",
    "    \n",
    "    if cv2.waitKey(10) == ord('q'): # Клавиша Esc\n",
    "        break\n",
    "        \n",
    "cap.release()\n",
    "cv2.destroyAllWindows()"
   ]
